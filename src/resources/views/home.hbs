<div class='mt-4'>
  <div class='row'>
    {{#each products}}
      <div class='col-6 col-md-6 col-lg-3 mt-4'>
        <div class='card card-product-item'>
          <a href='/product/{{this._id}}/detail'>
            <img src='{{this.image}}' class='card-img-top w-100' alt='{{this.image}} ' />
          </a>
          <div class='card-body'>
            <a href='/product/{{this._id}}/detail'>
              <h5 class='card-title text-dark'>{{this.name}}</h5>
            </a>
            <p class='card-text sp_price'>Giá:
              <span>
                {{formatMoneyVnd this.price}}
              </span>
            </p>
            <a href='/product/{{this._id}}/detail' class='btn_card'>Xem chi tiết</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>